#:include LoginScreen login_screen.LoginScreen
#:include TemaScreen login_screen.TemaScreen

<MainScreenManager>:
    MDScreen:
        name: 'telainicial'
        MDRectangleFlatIconButton:
            text: 'FAZER LOGIN'
            icon: 'account'
            pos_hint:{'center_x': 0.5, 'center_y': 0.8}
            on_release: root.current = 'tela_login'
        MDIconButton:
            icon: 'cog'
            pos_hint:{'center_x': 0.74, 'center_y': 0.8}
            on_release: root.current = 'tela_tema'
    LoginScreen:
        name: 'tela_login'
        MDIconButton:
            icon: 'home'
            pos_hint:{'center_x': 0.04, 'center_y': 0.87}
            on_release: root.current = 'telainicial'
    TemaScreen:
        name: 'tela_tema'
        MDIconButton:
            icon: 'home'
            pos_hint:{'center_x': 0.04, 'center_y': 0.979}
            on_release: root.current = 'telainicial'